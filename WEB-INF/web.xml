<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>bank</display-name>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>FormCreate</servlet-name>
		<servlet-class>bank.view.FormCreate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FormLogin</servlet-name>
		<servlet-class>bank.view.FormLogin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>bank.view.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SimpleCreate</servlet-name>
		<servlet-class>bank.view.SimpleCreate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SimpleLogin</servlet-name>
		<servlet-class>bank.view.SimpleLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FormCreate</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FormLogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimpleCreate</servlet-name>
		<url-pattern>/acc</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimpleLogin</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
</web-app>
